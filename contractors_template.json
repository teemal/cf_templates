{
  "Resources": {
    "User": {
      "Type": "AWS::IAM::User",
      "Properties": {
        "UserName": "cloud-boi",
        "LoginProfile": {
          "Password": "butt1234",
          "PasswordResetRequired": false
        },
        "Path": "/"
      }
    },
    "UserCredentials": {
      "Type": "AWS::IAM::AccessKey",
      "Properties": {
        "UserName": {
          "Ref": "User"
        }
      }
    },
    "ContractorPolicy": {
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "Description": "Contractors policy for cloud dev assignnment",
        "ManagedPolicyName": "aws-iam-contractor-policy",
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "CloudDevIamContractor",
              "Effect": "Allow",
              "Action": [
                "iam:ListUsers",
                "iam:ListGroups",
                "iam:ListRoles",
                "iam:ListPolicies",
                "iam:ListVirtualMFADevices",
                "cloudformation:ListStacks",
                "cloudformation:ListStackResources",
                "cloudformation:GetTemplate"
              ],
              "Resource": "*"
            },
            {
              "Sid": "S3ListBucketsPolicy",
              "Effect": "Allow",
              "Action": [
                "s3:ListAllMyBuckets",
                "s3:ListObjectsV2"
              ],
              "Resource": "arn:aws:s3:::*"
            },
            {
              "Sid": "S3ListBucketContentsPolicy",
              "Effect": "Allow",
              "Action": [
                "s3:ListBucket"
              ],
              "Resource": "arn:aws:s3:::921245065062"
            },
            {
              "Sid": "S3ReadObjectPolicy",
              "Effect": "Allow",
              "Action": [
                "s3:GetObject"
              ],
              "Resource": "arn:aws:s3:::921245065062/*"
            }
          ]
        }
      }
    },
    "ContractorRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "AWS": [
                  "arn:aws:iam::204087959985:root",
                  "arn:aws:iam::921245065062:user/cloud-boi"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "ManagedPolicyArns": [
          {
            "Ref": "ContractorPolicy"
          }
        ],
        "Description": "Contractor role",
        "RoleName": "contractors"
      }
    },
    "ContractorsGroup": {
      "Type": "AWS::IAM::Group",
      "Properties": {
        "GroupName": "Contractors-group",
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/IAMAccessAdvisorReadOnly",
          "arn:aws:iam::aws:policy/AWSCloudFormationReadOnlyAccess"
        ]
      }
    }
  }
}