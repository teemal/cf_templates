{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "THICCBucket": {
      "Type": "AWS::S3::Bucket",
      "DeletionPolicy": "Retain",
      "UpdateReplacePolicy": "Retain",
      "Properties": {
        "AccessControl": "PublicRead"
      }
    },
    "User": {
      "Type": "AWS::IAM::User",
      "Properties": {
        "UserName": "supreme-s3",
        "LoginProfile": {
          "Password": "butt1234",
          "PasswordResetRequired": false
        },
        "Path": "/"
      }
    },
    "UserCredentials": {
      "Type": "AWS::IAM::AccessKey",
      "Properties": {
        "UserName": {
          "Ref": "User"
        }
      }
    },
    "S3Policy": {
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "Description": "Policy to  allow user full s3 access",
        "ManagedPolicyName": "aws-iam-s3-full-access-policy",
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "CloudDevIamSupremeS3",
              "Effect": "Allow",
              "Action": [
                "s3:*"
              ],
              "Resource": "*"
            },
            {
              "Sid": "AllowBucketRead",
              "Effect": "Allow",
              "Action": [
                "s3:*"
              ],
              "Resource": [
              "arn:aws:s3:::thicc-boi-thiccbucket-1lqm0m2iu7gji",
              "arn:aws:s3:::thicc-boi-thiccbucket-1lqm0m2iu7gji/*"
              ]
            }
          ]
        }
      }
    },
    "S3Role": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "AWS": [
                  "arn:aws:iam::921245065062:user/supreme-s3",
                  "arn:aws:iam::921245065062:user/dumb-boi"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "ManagedPolicyArns": [
          {
            "Ref": "S3Policy"
          }
        ],
        "Description": "Supreme S3 role",
        "RoleName": "supreme-S3"
      }
    }
  }
}